<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="requestdeals" addrulepath="components/com_deals/models/rules" label="COM_EALS_REQUESTDEALS_FORM_LABEL">


		<field name="name"  id="rd-name"
			type="text"
			description="COM_DEALS_REQUESTDEAL_FORM_NAME_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_NAME_LABEL"
			required="true"
			class="rd_field"
			filter="string"
		/>
		<field name="surname"  id="rd-surname"
			type="text"
			description="COM_DEALS_REQUESTDEAL_FORM_SURNAME_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_SURNAME_LABEL"
			required="true"
			class="rd_field"
			filter="string"
		/>
		<field name="mail"  id="rd-mail"
			type="text"
			description="COM_DEALS_REQUESTDEAL_FORM_MAIL_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_MAIL_LABEL"
			required="true"
			class="rd_field"
			validate="email"
		/>
		<field name="phone"  id="rd-phone"
			type="text"
			description="COM_DEALS_REQUESTDEAL_FORM_PHONE_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_PHONE_LABEL"
			required="true"
			class="rd_field"
			filter="string"
		/>
		<field name="deal"
			type="textarea"
			cols="50"
			rows="10"
			id="rd-deal"
			description="COM_DEALS_REQUESTDEAL_FORM_DEAL_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_DEAL_LABEL"
			filter="htmlsafe"
			required="true"
		/>
		<field name="shop"  id="rd-shop"
			type="text"
			description="COM_DEALS_REQUESTDEAL_FORM_SHOP_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_SHOP_LABEL"
			required="true"
			class="rd_field"
			filter="string"
		/>
		<field name="info"
			type="textarea"
			cols="50"
			rows="10"
			id="rd-info"
			description="COM_DEALS_REQUESTDEAL_FORM_INFO_DESC"
			label="COM_DEALS_REQUESTDEAL_FORM_INFO_LABEL"
			filter="htmlsafe"
			required="true"
		/>


	</fieldset>
</form>

