<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/JFOLDER_ADMINISTRATOR/components/com_deals/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" class="inputbox"
			size="30" label="COM_DEALS_FIELD_TITLE_LABEL"
			description="COM_DEALS_FIELD_TITLE_DESC" required="true" />

		<field name="description" type="editor" class="inputbox"
			label="COM_DEALS_COMPANY_FIELD_DESCRIPTION_LABEL"
			description="COM_DEALS_COMPANY_FIELD_DESCRIPTION_DESC"
			filter="JComponentHelper::filterText" buttons="true" hide="pagebreak,readmore,article" required="false" />


		<field name="published" type="list"
			label="COM_DEALS_FIELD_STATE_LABEL" description="COM_DEALS_FIELD_STATE_DESC"
			class="inputbox" filter="intval" size="1" default="1" required="true">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="mail"  type="email" class="inputbox" validate="email"
			size="30" label="COM_DEALS_COMPANY_FIELD_MAIL_LABEL"
			description="COM_DEALS_COMPANY_FIELD_MAIL_DESC" required="true" />


		<field name="url" type="text" class="inputbox"
			size="30" label="COM_DEALS_COMPANY_FIELD_URL_LABEL"
			description="COM_DEALS_COMPANY_FIELD_URL_DESC" />
		<field name="address" type="text" class="inputbox"
			size="30" label="COM_DEALS_COMPANY_FIELD_ADDRESS_LABEL"
			description="COM_DEALS_COMPANY_FIELD_ADDRESS_DESC" />
		<field name="phone" type="text" class="inputbox"
			size="30" label="COM_DEALS_COMPANY_FIELD_PHONE_LABEL"
			description="COM_DEALS_COMPANY_FIELD_PHONE_DESC" />
		<field name="hours" type="text" class="inputbox"
			size="30" label="COM_DEALS_COMPANY_FIELD_HOURS_LABEL"
			description="COM_DEALS_COMPANY_FIELD_HOURS_DESC" />
		<field name="fb_url" type="text" class="inputbox"
			size="30" label="COM_DEALS_COMPANY_FIELD_FB_URL_LABEL"
			description="COM_DEALS_COMPANY_FIELD_FB_URL_DESC" />

		<field name="map" type="textarea" class="inputbox" filter="raw"
			cols="3" rows="10" label="COM_DEALS_COMPANY_FIELD_MAP_LABEL"
			description="COM_DEALS_COMPANY_FIELD_MAP_DESC" required="false" />


	</fieldset>


</form>
