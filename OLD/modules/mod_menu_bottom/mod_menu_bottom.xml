<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>mod_menu_bottom</name>
	<author>LongCMS Team</author>
	<creationDate>Jenuary 2013</creationDate>
	<copyright>(C) 2008 - 2013 LongCMS Team. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>akalongman@gmail.com</authorEmail>
	<authorUrl>www.long.ge</authorUrl>
	<version>2.5.0</version>
	<description>MOD_MENU_BOTTOM_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_menu_bottom">mod_menu_bottom.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_menu_bottom.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_menu_bottom.ini</language>
		<language tag="en-GB">en-GB.mod_menu_bottom.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
	<config>
		<fields name="params">
			<fieldset name="basic">


				<field
					name="block_title"
					type="text"
					size="30"
					label="MOD_MENU_BOTTOM_FIELD_BLOCK_TITLE_LABEL"
					description="MOD_MENU_BOTTOM_FIELD_BLOCK_TITLE_DESC" />


				<field
					name="menu"
					type="menuitem"
					disable="separator"
					published="1"
					label="MOD_MENU_BOTTOM_FIELD_MENU_LABEL"
					description="MOD_MENU_BOTTOM_FIELD_MENU_DESC" >
					<option
						value="">MOD_MENU_BOTTOM_FIELD_MENU_SELECT_LABEL</option>
				</field>





			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>





		</fields>



	</config>
</extension>
