<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>mod_deals_related</name>
	<author>LongCMS Team</author>
	<creationDate>Jenuary 2013</creationDate>
	<copyright>(C) 2008 - 2013 LongCMS Team. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>akalongman@gmail.com</authorEmail>
	<authorUrl>www.long.ge</authorUrl>
	<version>2.5.0</version>
	<description>MOD_DEALS_RELATED_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_deals_related">mod_deals_related.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_deals_related.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_deals_related.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_deals_related.sys.ini</language>
		<language tag="ka-GE">language/ka-GE/ka-GE.mod_deals_related.ini</language>
		<language tag="ka-GE">language/en-GE/en-GE.mod_deals_related.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="count"
					type="integer"
					first="1"
					last="5"
					step="1"
					default="5"
					label="MOD_DEALS_RELATED_FIELD_COUNT_LABEL"
					description="MOD_DEALS_RELATED_FIELD_COUNT_DESC" />

			</fieldset>


			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>