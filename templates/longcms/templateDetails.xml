<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
    <name>LongCMS</name>
    <creationDate>25 November 2012</creationDate>
    <author>LongCMS Project</author>
    <authorEmail>akalongman@gmail.com</authorEmail>
    <authorUrl>http://www.unix.ge</authorUrl>
    <copyright>(C) 2008 - 2013 LongCMS Team. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>2.5.0</version>
    <description>TPL_LONGCMS_XML_DESCRIPTION</description>

    <files>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>javascript</folder>
        <folder>fonts</folder>
        <folder>language</folder>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>favicon.ico</filename>
        <filename>component.php</filename>
        <filename>error.php</filename>
    </files>

    <positions>
        <position>login</position>
        <position>foot_info</position>
        <position>header_banner</position>
        <position>logo</position>
        <position>content</position>
        <position>content1</position>
        <position>debug</position>
        <position>footer_menu</position>
        <position>copyright</position>
        <position>counter</position>
        <position>search</position>
        <position>deals_menu</position>
    </positions>

    <!--     For core templates, we also install/uninstall the language files in the core language folders.
    -->
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_longcms.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_longcms.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="logo" type="media"
                    label="TPL_LONGCMS_FIELD_LOGO_LABEL" description="TPL_LONGCMS_FIELD_LOGO_DESC" />

                <field name="link_logo" type="radio"
                    label="TPL_LONGCMS_FIELD_LINK_LOGO_LABEL"
                    description="TPL_LONGCMS_FIELD_LOGO_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="print_logo" type="media"
                    label="TPL_LONGCMS_FIELD_PRINT_LOGO_LABEL" description="TPL_LONGCMS_FIELD_PRINT_LOGO_DESC" />


            </fieldset>
        </fields>
    </config>
</extension>
